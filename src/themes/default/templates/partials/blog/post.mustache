<div class="card{{#featured}} featured{{/featured}}">
    {{#featured}}<span class="featured">featured</span>{{/featured}}
    
    <div class="author-list">
    {{#authors}}
        <a href="{{permalink}}">
        {{#image}}<img class="small rounded" src="{{.}}" alt="{{title}}">{{/image}}
        </a>
    {{/authors}}
    </div>
    <div class="meta">
        <time datetime="{{publication.formats.iso8601}}">{{publication.date.short}} {{publication.time.short}}</time>
        {{#contents.readingTime}} &middot; <span class="reading-time">{{.}} min read</span>{{/contents.readingTime}}
    </div>
    
    <h2 class="title"><a href="{{permalink}}" target="">{{title}}</a></h2>
    <hr>
    <p>{{description}}</p>

    <div class="tag-list">
    {{#tags}}
        <a href="{{permalink}}"><small>{{title}}</small></a>
    {{/tags}}
    </div>
</div>
